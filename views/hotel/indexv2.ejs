<% layout('layouts/boilerplate')%>
<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
<link rel="stylesheet" type="text/css" href="css/style.css">
<h1>Hotels</h1>
<% let i = 0 %> 
<% for (let hotel of hotelsv2.data.data){%>
    <div class="row py-2">
        <div class="col-sm-9 col-md-9 col-lg-9">
            <div class="hotel-card bg-white rounded-lg shadow overflow-hidden d-block d-lg-flex">
                <div class="hotel-card_images">
                    <div id="bootstrapCarousel" class="carousel slide h-100" data-ride="carousel">
                        <div class="carousel-inner h-100">
                            <div class="carousel-item h-100 active">
                                <img src="" width="300px" height="300px" class="d-block w-100" id="cardImage<%=i%>" alt="Hotel Image"> 
                                <script>
                                 var hotelva =  <%- JSON.stringify(hotel) %>;
                                 var image = hotelva.cardPhotos[0].sizes.urlTemplate.replace('w={width}&h={height}&s=1', 'w=300&h=300&s=1')
                                 var hotelImage  = document.getElementById('cardImage<%=i%>');
                                 hotelImage.src = image;
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hotel-card_info p-4">
                    <div class="d-flex align-items-center mb-2">
                        <h5 class="mb-0 mr-2"><%= hotel.title %></h5>
                        <a href="#!" class="text-dark ml-auto"><i class="far fa-heart fa-lg"></i></a>
                    </div>
                    <div class="d-flex justify-content-between align-items-end">
                        <div class="hotel-card_details">
                            <div class="text-muted mb-2"><box-icon type='solid' name='pin'></box-icon><%= hotel.secondaryInfo %></div>
                            <div class="mb-2"><span class="badge badge-primary"><%= hotel.bubbleRating.rating %><box-icon name='star' type='solid' color='#ffffff' size="12px"></box-icon></span> <a href="#!" class="text-muted">(<%= hotel.bubbleRating.count %> ratings &  reviews)</a></div>
                            <div class="amnities d-flex ">
                                <p class="font-weight-normal h7 "><%= hotel.primaryInfo %></p>
                            </div>
                            <% if (hotel.accentedLabel == false) { %>
                                <p class="h3 font-weight-bold"></p>
                             <% } else { %>
                                <p class="text-success h6 font-weight-bold "><%= hotel.accentedLabel %></p>
                             <% } %>
                            <ul class="hotel-checklist pl-0 mb-0">
                                <span>By <span class="h6 font-weight-bold"><%= hotel.provider %></span></span>
                            </ul>
                            <p class="font-weight-normal h6 "><%= hotel.priceDetails %></p>
                        </div>
                        <div class="flex hotel-card_pricing text-center font-weight-bold ">
                            <% if (hotel.priceForDisplay == null) { %>
                                <p class="h3 font-weight-bold">Price on contact</p>
                             <% } else { %>
                                <p class="h3 font-weight-bold text-right"><%= hotel.priceForDisplay %></p>
                                <p class="text-decoration-line-through text-danger h6 font-weight-bold text-right"><%= hotel.strikethroughPrice %></p>
                                <button class="btn btn-primary">Check Rooms</button>
                             <% } %>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% i++ %> 
<% }%>
   
   
<script src="/javascripts/clusters.js"></script>